<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_fitness_center"
        android:id="@+id/upgrade_listcell_image"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Name"
        android:textSize="17dp"
        android:id="@+id/upgrade_listcell_name"
        android:layout_toRightOf="@id/upgrade_listcell_image"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/upgrade_listcell_name"
        android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level of upgrade"
        android:textSize="17dp"
        android:id="@+id/upgrade_listcell_level"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="7dp"/>
        </LinearLayout>


</RelativeLayout>